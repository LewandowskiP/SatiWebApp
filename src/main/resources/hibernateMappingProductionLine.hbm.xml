<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="HibernateClasses">

    <class name="ProductionLine" table="ProductionLine">
        <id name="id" type="int" column="productionLine_id">
            <generator class="identity"/>
        </id>
        <property name="roast" column="roast" type="boolean"/>
        <property name="line" type="string">
            <column name="line" length="30"/>
        </property>

    </class>

</hibernate-mapping>